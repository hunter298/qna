.container
  .row
    .col
      h2 = question.title
  .row
    .col
      p class="question-asked"
        = "Asked #{question.created_at}"

  hr

  .row
    .col
      h4 = question.body
  .row
    .col
      h3 = "#{question.answers.count} Answers:"

  - question.answers.each do |answer|
    .row
      .col-12
        p = answer.body
        p = (link_to 'Delete', answer_path(answer), method: :delete) if answer.user == current_user
    hr


  = render 'answers/form', answer: question.answers.new